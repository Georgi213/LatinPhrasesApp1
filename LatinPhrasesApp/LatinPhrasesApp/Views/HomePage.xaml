                       FontSize="20"
                       TextColor="#5F4227"
                       HorizontalOptions="Start" />

                <ListView x:Name="latinPhrasesListView"
                          Margin="0,20,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding}"
                                      TextColor="Black" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </RelativeLayout>
</ContentPage>